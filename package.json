		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"simple-git-hooks": "^2.9.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.11",
		"vite-plugin-monkey": "^3.5.1"
	},
	"dependencies": {
		"ical-generator": "^6.0.1"
	},
	"lint-staged": {
		"*.{js,ts,css,md,cjs,mjs,json}": [
			"prettier --write"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	}
